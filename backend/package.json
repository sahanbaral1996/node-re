{
  "name": "revea-middleware",
  "version": "1.0.0",
  "description": "Welcome to revea middleware. This application helps to push the data to salesforce or any other platforms.",
  "main": "src/app.ts",
  "scripts": {
    "test": "mocha",
    "test:watch": "mocha -w",
    "test:coverage": "nyc npm run test",
    "start": "nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "clean": "rimraf build",
    "build-ts": "tsc",
    "build": "run-s clean build-ts",
    "lint": "eslint src/**/*.ts --no-error-on-unmatched-pattern",
    "lint:fix": "eslint --fix src/**/*.ts --no-error-on-unmatched-pattern",
    "prettify": "prettier --write --tab-width 2 \"src/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix src/**/*.ts --no-error-on-unmatched-pattern",
      "yarn prettify"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.6.1",
    "@sentry/node": "^6.2.2",
    "@sentry/tracing": "^6.2.2",
    "awilix": "^4.3.1",
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "body-parser-xml": "^2.0.1",
    "camelcase-keys": "^6.2.2",
    "celebrate": "^13.0.4",
    "chargebee-typescript": ">=2",
    "cookie": "^0.4.1",
    "cors": "^2.8.5",
    "date-fns": "^2.17.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "facebook-nodejs-business-sdk": "^11.0.0",
    "generate-password": "^1.6.0",
    "helmet": "^4.2.0",
    "http-status-codes": "^2.1.4",
    "joi": "^17.4.0",
    "jsforce": "^1.10.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nonce": "^1.0.4",
    "ramda": "^0.27.1",
    "sharp": "^0.28.3"
  },
  "devDependencies": {
    "@types/body-parser-xml": "^1.1.0",
    "@types/chai": "^4.2.17",
    "@types/express": "^4.17.11",
    "@types/jsforce": "^1.9.26",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.28",
    "@types/ramda": "^0.27.38",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.3.4",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "2.2.1",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5",
    "winston": "^3.3.3"
  }
}
